<!DOCTYPE html>
<html>
  <%- include('../partials/head.ejs') %>
  <link rel='stylesheet' href='/css/patients.css' />
  <body>
      <header>
    <%- include('../partials/navBar.ejs') %>
     </header>
    <main class="container-fluid">
        <article class="col-8 mx-auto mb-5">
            <h2 class="titulo-admin pb-3 border-bottom text-center pt-5 mx-auto text-uppercase">Agregar Usuario</h2>
            </article>
            <% if(typeof(errors) != 'undefined'){%>
                <ul class="alert alert-danger">
                  <% errors.forEach(error => { %>
                    <li><%= error.msg%></li>
                    <%});%>
                </ul>
              <%}%>
                   <!--Formulario-->
              <form class="mt-5" action="/registro" method="POST" id="formulario">
                 <!--Nombre-->
                  <div class="form-group col-12 d-flex justify-content-center mb-0">
                      <input type="text" name="nombre" placeholder="Nombre" class="form-control form-control-sm mb-3 datos-envio-input  col-6">
                  </div>
                  <!--Apellido-->
                  <div class="form-group col-12 d-flex justify-content-center mb-0">
                      <input type="text" name="apellido" placeholder="Apellido" class="form-control form-control-sm mb-3 datos-envio-input  col-6">
                  </div>
                    <!--Username-->
                  <div class="form-group col-12 d-flex justify-content-center mb-0">
                   <input type="text" name="username" placeholder="Nombre de usuario" class="form-control form-control-sm mb-3 datos-envio-input  col-6">
               </div>
                    <!--Email-->
                  <div class="form-group col-12 d-flex justify-content-center mb-0">
                      <input type="Email" name="email" placeholder="Email" class="form-control form-control-sm mb-3 datos-envio-input  col-6">
                  </div>      
                      <!--Password-->
                  <div class="form-group col-12 d-flex justify-content-center mb-0">
                     <input type="password" name="contraseña" placeholder="Contraseña" class="form-control form-control-sm mb-3 datos-envio-input col-6">
                  </div>   
                      <!--Confirmar password-->
                  <div class="form-group col-12 d-flex justify-content-center mb-0">
                      <input type="password" name="confirmar_contraseña" placeholder="Repetir contraseña" class="form-control form-control-sm mb-3 datos-envio-input col-6">
                   </div>
                      <!--telefono-->
                  <div class="form-group col-12 d-flex justify-content-center mb-0">
                      <input type="number" name="telefono" placeholder="Teléfono" class="form-control form-control-sm mb-3 datos-envio-input col-6">
                   </div>
                       <!--Puesto-->
                   <div class="form-group col-12 d-flex justify-content-center mb-0">
                    <select id="puesto" name="puesto" class="custom-select border-0 btn  py-0 col-6    ">
                        <option selected disabled>Area de trabajo</option>
                        <option value="administrativo">Administrativo</option>
                        <option value="medico">Médico</option>
                     </select>
                   </div>
                    <!--Genero-->
                <div class="form-group col-12 d-flex justify-content-center mb-0 mt-3">
                   <select id="genero" name="genero" class="custom-select border-0 btn  py-0 col-6    ">
                      <option selected disabled>Seleccione su género</option>
                      <option value="Hombre">Hombre</option>
                      <option value="Mujer">Mujer</option>
                   </select>
                </div>
               <div class="ingresar">
                  <div class="form-group w-60 d-flex justify-content-center">
                     <button type="submit" class="btn btn-dark w-60 mt-3">CREAR USUARIO</button>
                  </div>
                  <div class="form-group w-60 d-flex justify-content-center">
                      <a href="/adminusers" class="btn btn-light mt-2" tabindex="-1" role="button" aria-disabled="true">VOLVER</a>
                   </div>
                   
               </div>
                </form>
    </main>
        

 <!-- FOOTER -->
<%- include('../partials/footer.ejs') %>
  </body>
</html>
