<!DOCTYPE html>
<html>
  <%- include('../partials/head.ejs') %>
  <link rel='stylesheet' href='/css/patients.css' />
  <body>
      <header>
    <%- include('../partials/navBar.ejs') %>
     </header>
    <main class="container-fluid">
        <article class="col-8 mx-auto mb-5">
            <h2 class="titulo-admin pb-3 border-bottom text-center pt-5 mx-auto text-uppercase">Administrar Usuarios</h2>
            </article>
        <!--Listado de productos para administrar-->
        <section class="row">  
            <div class="col-12 d-flex justify-content-between">     
            <article class="my-3">
                <a href="/registro"><button type="button" class="btn btn-outline-dark rounded-0">+ agergar usuario</button>
                </a>
            </article>
            <div class="d-flex justify-content-center align-items-center">
                <!--Búsqueda-->
        
   
            </div>
         
        </div>  
        
            <article class="col-12">
                <table class="table">
                    <thead>
                        <tr>
                            
                            <th scope="col">Nombre</th>
                            <th scope="col">Apellido</th>
                            <th scope="col">Email</th>
                            <th scope="col">Género</th>
                            <th scope="col">Rol</th>
                            <th scope="col">Editar</th>
                            <th scope="col">Eliminar</th>
                 
                           
                        </tr>
                    </thead>
                    <tbody>
                        <% usuarios.forEach(user=> { %>
                            <tr>
                               
                                <td><%= user.first_name %></td>
                                <td><%= user.last_name %></td>
                                <td><%= user.email %></td>
                                <td><%= user.gender %></td>
                                 <% if (user.roles==1) { %>
                                    <td>Editor</td>
                                    <% } else { %>
                                        <td> Administrador</td>
                                 <% } %>
                                 <td><a href="/editUser/<%= user.id %>"><ion-icon  class="pl-2" name="pencil-outline"></ion-icon></a></td>
                                 <td><a href="/deleteUser/<%= user.id %>"><ion-icon class="pl-3" name="close-outline"></ion-icon></a></td>
                             
                               
                            </tr>
                            <% }); %> 
                    </tbody>
                </table>
                <div class="form-group w-60 d-flex justify-content-end">
                    <a href="/patients" class="btn btn-dark mt-2" tabindex="-1" role="button" aria-disabled="true">VOLVER</a>
                 </div>
            </article>
            
        </section>
    </main>
        

 <!-- FOOTER -->
<%- include('../partials/footer.ejs') %>
  </body>
</html>
