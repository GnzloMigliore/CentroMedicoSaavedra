<!DOCTYPE html>
<html>
  <%- include('../partials/head.ejs') %>
  <link rel="stylesheet" href="/css/master.css">
  <body>
   <div class="text-center mt-4"><img src="/images/logo.png" alt=""></div>
    <div class="text-center mt-4"><h1>Sistema de gestión</h1></div>
   <!--Formulario-->
   <form class="mt-5" action="/login" method="POST" id="formulario">
        <div class="form-group col-12 d-flex justify-content-center mb-0">
            <input type="text" name="email" placeholder="Email" class="form-control mb-2 datos-envio-input col-4">
        </div>      
        <div class="form-group col-12 d-flex justify-content-center mt-0 mb-1">
         <% if(typeof errors != 'undefined' && errors.email){%>
             <span class="text-danger" > <%=errors.email.msg %></span>
         <%}%>
       </div>
        <div class="form-group col-12 d-flex justify-content-center mb-0">
           <input type="password" name="contraseña" placeholder="Contraseña" class="form-control mb-2 datos-envio-input col-4">
       </div> 
        </div class="form-group col-12 d-flex justify-content-center mt-0 mb-1">
         <% if(typeof errors != 'undefined' && errors.contraseña){%>
             <span class="text-danger d-flex justify-content-center " > <%=errors.contraseña.msg %></span>
         <%}%>
        </div> 
     
        <div class="form-check text-center">
            <input class="form-check-input position-static" type="checkbox" id="blankCheckbox" value="option1" aria-label="..." name="recordarme"> Recordarme
        </div>  
        <div>   
            <a href="/recover" class="text-decoration-none text-body text-center"><p>OLVIDÉ MI CONTRASEÑA</p></a>
        </div> 
     <div class="ingresar">
        <div class="form-group w-60 d-flex justify-content-center">
           <button type="submit" class="btn btn-dark w-60">INICIAR SESION</button>
        </div>
        <div class="d-flex w-60 justify-content-center">
           <a href="/registro" class="btn btn-light mt-1" tabindex="-1" role="button" aria-disabled="true">CREAR CUENTA</a>
        </div>
     </div>
        </form>











    <!-- FOOTER -->
<%- include('../partials/footer.ejs') %>
  </body>
</html>
