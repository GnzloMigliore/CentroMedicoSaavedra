<!DOCTYPE html>
<html>
  <%- include('../partials/head.ejs') %>
  <link rel='stylesheet' href='/css/patients.css' />
  <body>
    <%- include('../partials/navBar.ejs') %>
    <main class="container-fluid">
        <article class="col-8 mx-auto mb-5">
            <h2 class="titulo-admin pb-3 border-bottom text-center pt-5 mx-auto text-uppercase">Pacientes</h2>
            </article>
        <!--Listado de productos para administrar-->
        <section class="row">  
            <div class="col-12 d-flex justify-content-between">     
            <article class="my-3">
                <a href="/patients/create"><button type="button" class="btn btn-outline-dark rounded-0">+ Agregar Paciente</button>
                </a>
            </article>
            <div class="dropdown  my-3 d-flex justify-content-end">
                <button class="btn btn-outline-dark rounded-0 dropdown-toggle boton-orden-filtro  " type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Filtrar
                </button>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="/productos/novedades" id="novedades">Obesidad</a>
                    <a class="dropdown-item" href="#" id="mas-vendidos">Diabetes</a>
                    <a class="dropdown-item" href="/productos/orden-menor-mayor" id="menor-mayor">ACV</a>
                    <a class="dropdown-item" href="/productos/orden-mayor-menor" id="mayor-menor">Aneurisma</a>
                </div>
                <div class="dropdown">
                <button class="btn btn-outline-dark rounded-0 dropdown-toggle boton-orden-filtro ml-3 " type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Filtrar x sexo
                </button>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                    <form class="d-flex justify-content-center px-2" action="/patients/generomh" method="GET">
                    <a class="dropdown-item" href="/patients/generoh" id="novedades">Hombre</a>
                    </form>
                    <form class="d-flex justify-content-center px-2" action="/patients/generom" method="GET">
                    <a class="dropdown-item" href="/patients/generom" id="mas-vendidos">Mujer</a>    
                   </form>          
                </div>
            </div>
            </div>
        </div>  
            <article class="col-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Apellido</th>
                            <th scope="col">Ver</th>
                            <th scope="col">Editar</th>
                            <th scope="col">Borrar</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% paciente.forEach(patient=> { %>
                            <tr>
                                <td><%= patient.id %></td>
                                <td><%= patient.first_name %></td>
                                <td><%= patient.last_name %></td>

                                <td><a href="/patients/detail/<%= patient.id %>">Ver detalle</a></td>
                                <td><a href="#">Editar paciente</a></td>
                                <td><a href="/patients/delete/<%= patient.id %>">Eliminar paciente</a></td>
                            </tr>
                            <% }); %> 
                    </tbody>
                </table>
            </article>
        </section>
    </main>
        
        











    <!-- FOOTER -->
<%- include('../partials/footer.ejs') %>
  </body>
</html>
